<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.futurice.android.reservator"
      android:versionCode="2"
      android:versionName="2.0">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" 
        android:name="ReservatorApplication" android:allowBackup="true">
        <activity android:name="LoginActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Hardware acceleration breaks the drawing of the vertices -->
        <activity android:name="RoomActivity" android:hardwareAccelerated="false"></activity>
        <activity android:name="SettingsActivity" android:theme="@style/Theme.Transparent"></activity>
        <activity android:name="LobbyActivity"></activity>
        <activity android:name=".view.RoomReservationPopup" android:theme="@style/Theme.Transparent"></activity>

    </application>
</manifest>
