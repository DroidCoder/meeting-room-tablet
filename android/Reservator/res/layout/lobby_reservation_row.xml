
<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center_vertical" android:layout_height="wrap_content"
	android:layout_gravity="center">
	<FrameLayout android:layout_height="match_parent"
			android:id="@+id/frameLayout3" android:layout_width="wrap_content"
			android:layout_weight="0.4"></FrameLayout>
	<LinearLayout android:layout_width="200px" android:id="@+id/linearLayout1"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_centerVertical="true">
		<TextView android:id="@+id/roomNameLabel"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Room name XXX"></TextView>
		<TextView android:id="@+id/roomInfoLabel"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="(42 persons)"></TextView>
	</LinearLayout>
	<LinearLayout android:id="@+id/bookingMode"
		android:layout_height="wrap_content" android:gravity="center_vertical"
		android:layout_width="1px" android:visibility="gone" android:layout_weight="3">
		<com.futurice.android.reservator.view.TimeSpanPicker
			android:id="@+id/timeSpanPicker1" android:layout_width="wrap_content"
			android:layout_height="wrap_content">

		</com.futurice.android.reservator.view.TimeSpanPicker>
		<AutoCompleteTextView android:layout_width="wrap_content"
			android:id="@+id/nameAutoEditText" android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/timeSpanPicker1" android:maxLines="1"
			android:layout_centerVertical="true" android:width="100sp"
			android:hint="Your name"></AutoCompleteTextView>
		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="OK"
			android:minWidth="40sp" android:id="@+id/reserveButton"></Button>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="X"
			android:minWidth="40sp" android:id="@+id/cancelButton"></Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/normalMode"
		android:layout_height="wrap_content" android:layout_width="1px" android:visibility="visible" android:layout_weight="3">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/roomStatusLabel"
			android:text="&lt;status&gt;"></TextView>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/book_now"
			android:id="@+id/bookNowButton"></Button>
		<Button android:background="@drawable/kalenterinappi"
			android:id="@+id/calendarButton" android:layout_height="wrap_content"
			android:layout_width="wrap_content"></Button>
	</LinearLayout>
	<FrameLayout android:layout_height="match_parent"
			android:id="@+id/frameLayout3" android:layout_width="wrap_content"
			android:layout_weight="0.4"></FrameLayout>
</LinearLayout>
