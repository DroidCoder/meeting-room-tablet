
<RelativeLayout android:id="@+id/relativeLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/background" android:padding="0dip">
	<RelativeLayout
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerInParent="true">
		<Spinner android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/defaultRoomSpinner" android:layout_below="@+id/defaultRoomLabel"></Spinner>
		<TextView android:text="@string/default_room" android:layout_height="wrap_content" android:id="@+id/defaultRoomLabel" android:layout_width="wrap_content" android:gravity="center_vertical" android:lines="2"></TextView>
	</RelativeLayout>
</RelativeLayout>
